<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThePlaceToBe.DonneesView">
  <ContentView.Content>
        <StackLayout Spacing="20">
            <StackLayout Orientation="Horizontal" >
                <Label  Text="Nom" TextColor="Black" FontSize="18" WidthRequest="110" />
                <Label  x:Name="nom" TextColor="Black" FontSize="16" />
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label  Text="Prenom" TextColor="Black" FontSize="18" WidthRequest="110"/>
                <Label  x:Name="prenom" TextColor="Black" FontSize="16"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal" >
                <Label  Text="E-Mail" TextColor="Black" FontSize="18" WidthRequest="110"/>
                <Label  x:Name="email" TextColor="Black" FontSize="16"/>
            </StackLayout>
        </StackLayout>
    </ContentView.Content>
</ContentView>