<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThePlaceToBe.Views.MainPage.MainPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="120"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <AbsoluteLayout Grid.Row="0"
                            Grid.Column="0">
                
                <Image Source="logo.png"
                       WidthRequest="120"
                       AbsoluteLayout.LayoutFlags="PositionProportional"
                       AbsoluteLayout.LayoutBounds="0.05, 0.1"/>


                <StackLayout AbsoluteLayout.LayoutFlags="PositionProportional"
                             AbsoluteLayout.LayoutBounds="0.95, 0"
                             WidthRequest="100">
                    <Frame BorderColor="Black"
                           CornerRadius="50"
                           HeightRequest="70"
                           WidthRequest="70"
                           Margin="0, 10, 0, 0"
                           Padding="1"
                           HorizontalOptions="Center">
                        <Image Source="imgAccount.png"
                               HorizontalOptions="Center"/>
                    </Frame>
                    

                    <Label Text="Octofen"
                       FontAttributes="Bold"
                       FontSize="14"
                       TextColor="{StaticResource textColor}"
                       HorizontalOptions="Center"/>
                </StackLayout>
            </AbsoluteLayout>

            <StackLayout Spacing="0"
                            Grid.Row="1"
                            Grid.Column="0"
                            BackgroundColor="#c6c6c6">

                <BoxView BackgroundColor="White"
                             HeightRequest="2"/>

                <StackLayout Orientation="Horizontal"
                                 HorizontalOptions="FillAndExpand"
                                 Spacing="0"
                             Margin="0, 10, 0, 0">
                    <Label Text="Filter :"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="Black"
                               VerticalOptions="Center"
                               Margin="10, 0, 10, 5"/>

                    <Picker x:Name="flavourPicker"
                            BackgroundColor="White"
                            FontSize="12"
                            WidthRequest="90"
                            HeightRequest="25"
                            VerticalOptions="Center"/>

                    <StackLayout Spacing="0"
                                     Orientation="Horizontal"
                                     HorizontalOptions="EndAndExpand">
                        <Image Source="loupe.png"
                               HeightRequest="30"
                               VerticalOptions="Center"/>

                        <Entry BackgroundColor="White"
                               VerticalOptions="Center"
                               FontSize="12"
                               HeightRequest="25"
                               WidthRequest="90"
                               Margin="10, 0, 10, 0"/>
                    </StackLayout>

                </StackLayout>

                <BoxView BackgroundColor="White"
                             HeightRequest="2"
                             Margin="0, 10, 0, 10"/>

                <Grid VerticalOptions="FillAndExpand"
                          HorizontalOptions="FillAndExpand"
                          ColumnSpacing="0"
                          RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Image Source="beer.png"
                           Grid.Column="0"
                           Grid.Row="0"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="1"
                           Grid.Row="0"
                           Margin="5, 5"/>
                    
                    <Image Source="beer.png"
                           Grid.Column="2"
                           Grid.Row="0"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="0"
                           Grid.Row="1"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="1"
                           Grid.Row="1"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="2"
                           Grid.Row="1"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="0"
                           Grid.Row="2"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="1"
                           Grid.Row="2"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="2"
                           Grid.Row="2"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="0"
                           Grid.Row="3"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="1"
                           Grid.Row="3"
                           Margin="5, 5"/>

                    <Image Source="beer.png"
                           Grid.Column="2"
                           Grid.Row="3"
                           Margin="5, 5"/>
                </Grid>
                <Button Text="Scan"
                            FontSize="20"
                            FontAttributes="Bold"
                            TextColor="White"
                            BorderRadius="15"
                            BackgroundColor="{StaticResource backgroundColor}"
                            HorizontalOptions="Center"
                            WidthRequest="150"
                            Margin="0, 20, 0, 10"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>